{
	"compilerOptions": {
		"outFile": "./build/demo.js",
		"composite": true,
		"module": "system",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": false,
		"incremental": true,
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		]
	},
	"include": [
		"source/**/*.ts"
	],
	"references": [
		{ "path": "../TruthStack/Truth/source" },
		{ "path": "../TruthStack/Reflex/ReflexCore" },
		{ "path": "../TruthStack/Backer"}
	]
}
